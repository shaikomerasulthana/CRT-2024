#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int units;
    scanf("%d",&units);
    if(units<=200)
    {
     int r1=units*0.5;
        printf("Rs.%d",r1);
    }else if(units<=400){
        int r2=units*0.65+100;
        printf("Rs.%d",r2);
    }else if(units<=600){
        int r3=units*0.80+200;
        printf("Rs.%d",r3);
    }else{
        int r4=units*1.25+425;
        printf("Rs.%d",r4);
    }   
    return 0;
}
